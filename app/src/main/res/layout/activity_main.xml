<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/selectedFoodTxt"
            android:fontFamily="@font/nunito_bold" android:textSize="30sp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Decide"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/decideBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/nunito_bold"
            android:textColor="#fff" android:background="@color/colorPrimaryDark"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:id="@+id/addFoodTxt"
            android:hint="Add food choice..." android:textSize="16sp" android:fontFamily="@font/nunito"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"/>
    <Button
            android:text="Add Food"
            android:layout_width="222dp"
            android:layout_height="44dp"
            android:id="@+id/addFoodBtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
            android:textColor="#fff" android:includeFontPadding="false" android:fontFamily="@font/nunito_bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"/>

</android.support.constraint.ConstraintLayout>